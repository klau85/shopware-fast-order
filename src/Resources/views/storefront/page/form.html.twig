{% sw_extends '@Storefront/storefront/base.html.twig' %}

{% block base_content %}
    <h1>{{ 'fast-order.title' | trans }}</h1>

    <form class="fast-order-form" action="{{ url('frontend.fast.order') }}" method="post">
        <div class="mb-3" id="rows-wrapper">
            {% for i in range(1, 4) %}
            <div class="row g-2">
                <div class="form-group col-sm-3">
                    <input type="text" class="form-control product-number" id="product-number-{{ i }}" placeholder="{{ 'fast-order.form.product-number-placeholder' | trans }}" name="productNumber[]" value="" required="required" minlength="2">
                </div>
                <div class="form-group col-sm-1">
                    <input type="number" class="form-control quantity" id="quantity-{{ i }}" placeholder="{{ 'fast-order.form.quantity-placeholder' | trans }}" name="quantity[]" value="1" required="required" minlength="1" min="1">
                </div>
            </div>
            {% endfor %}
        </div>

        <div class="mb-3"><button type="button" class="btn" id="add-row">{{ 'fast-order.form.add-row' | trans }}</button></div>

        <button type="submit" class="btn btn-primary" id="add-to-cart">{{ 'fast-order.form.add-to-cart' | trans }}</button>
    </form>
{% endblock %}
